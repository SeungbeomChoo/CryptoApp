<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:CryptoApp"
             x:Class="CryptoApp.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <DataTemplate x:Key="CryptoSearchTemplate">
                <Grid Padding="10"
                      ColumnDefinitions="0.15*,0.85*">
                    <Image Source="{Binding Image}"
                           HeightRequest="20"
                           WidthRequest="20" />
                    <Label Grid.Column="1"
                           Text="{Binding Name}"
                           FontAttributes="Bold"
                           VerticalOptions="Center" />
                </Grid>
            </DataTemplate>

            <DataTemplate x:Key="whiteLine">
                <VerticalStackLayout Grid.Row="0" Padding="15,3,15,0">
                    <BoxView Color="white" HeightRequest="0.9" HorizontalOptions="Fill" />
                </VerticalStackLayout>
            </DataTemplate>

        </ResourceDictionary>
    </Application.Resources>
</Application>
